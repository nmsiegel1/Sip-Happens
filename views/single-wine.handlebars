{{!-- painting --}}

{{#if loggedIn}}
<section class="cat-btn-div" >
<div class="cat-btns">
    <div class="cat-img"> 
        <img src="/images/{{wine.wine_image}}" alt="{{wine.name}}">
    </div>
    <div>
        <h3 class="wine-name">{{wine.type}}</h3>
        <p>Name: {{wine_name}}</p>
    </div>
</div>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">You must login first to view this painting</a>
{{/if}}
