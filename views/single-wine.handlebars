{{#if loggedIn}}
{{>single-wine-details wine}}

<!-- Comment Section -->
        <div class="head-div wine-head">
            <h1 class="comment-h1">Comments</h1>
        </div>
        {{wine.vote_count}} {{format_plural "vote" wine.vote_count}}
        <form class="comment-input" id="comment-form">
            <div class="comment-input-div">
                <textarea name="comment-body" type="text" placeholder="Write a comment..." id='write-comment' class="comment-input-text bg-light"></textarea>
                <button class="comment-input-btn" type="button" id="comment-button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send-fill" viewBox="0 0 16 16">
                        <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z"/>
                      </svg>
                </button>
            </div>
        </form>
                 <button class="comment-input-btn" type="button" id="upvote-btn">
                  Upvote
                </button>
        <div class="divider"></div>
        {{> comments wine.comments}}
        </div>
 
{{/if}}


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}